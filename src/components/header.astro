---
import menus from "../collections/menu.json";
import Logo from "../components/logo.astro";
const currentPath = Astro.url.pathname;
---

<!-- Div invisible para altura -->
<div class="relative w-full h-20 opacity-0 pointer-events-none"></div>

<header id="header" class="absolute top-0 z-50 w-full pt-4">
  <div class="flex items-center justify-between h-full max-w-5xl pl-6 pr-4 mx-auto border-b border-l-0 border-r-0 border-transparent select-none border-r border-l rounded-b-xl group">

    <!-- Contenedor de plecas con altura completa del header -->
    <div class="absolute left-0 top-0 h-12 w-full flex items-stretch -z-10 group-hover:bg-transparent">
      <!-- Bloque rosa -->
      <div class="h-full w-[49px] ml-[-15px] -skew-x-[30deg] bg-pink-500 relative overflow-hidden transition-all duration-300 group-hover:w-[235px]">
        <div class="absolute inset-0 bg-pink-500 clip-diagonal-left"></div>
      </div>

      <!-- Bloque cyan -->
      <div class="h-full w-[24px] -skew-x-[30deg] bg-cyan-400 relative overflow-hidden transition-all duration-500 group-hover:w-[160px] ml-[-10px]">
        <div class="absolute inset-0 bg-cyan-400 clip-diagonal-left"></div>
      </div>

      <!-- Bloque fuchsia -->
      <div class="h-full w-[14px] -skew-x-[30deg] bg-fuchsia-600 relative overflow-hidden transition-all duration-800 group-hover:w-[95px] ml-[-10px]">
        <div class="absolute inset-0 bg-fuchsia-600 clip-diagonal-right"></div>
      </div>
    </div>

    <nav class="relative z-30 flex justify-end w-full text-sm text-neutral-500 dark:text-neutral-400">
      <div id="menu" class="flex flex-row items-center gap-4">
        {menus.map((menu) => {
          const isActive = currentPath === menu.url;
          return (
            <a
              href={menu.url}
              class={`relative flex items-center justify-center px-3 py-2 font-medium tracking-wide text-center duration-200 ease-out hover:text-neutral-900 dark:hover:text-white ${
                isActive ? 'text-slate-400 font-extrabold' : menu.color ?? ''
              }`}
            >
              {menu.name}
            </a>
          );
        })}
      </div>
    </nav>
  </div>
</header>